# Production Environment Variables Template
# Copy to .env.local and fill in your values

# Analytics & Monitoring
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ANALYTICS_ENDPOINT=https://api.opsflow.ai/analytics

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS={"new_pricing_ui":true,"enhanced_roi_calculator":true,"marquee_animations":true}

# API Configuration
NEXT_PUBLIC_API_URL=https://api.opsflow.ai
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=https://app.opsflow.ai
NEXTAUTH_SECRET=your-super-secret-key-change-in-production
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret

# Database
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email
RESEND_API_KEY=re_your-resend-key
SENDGRID_API_KEY=SG.your-sendgrid-key

# File Storage
AWS_S3_BUCKET=opsflow-uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Restaurant Operations Specific
NEXT_PUBLIC_SUPPORTED_POS_SYSTEMS=toast,square,clover,resy
NEXT_PUBLIC_MAX_LOCATIONS_FREE_TIER=1
NEXT_PUBLIC_DEFAULT_TEMPERATURE_UNIT=fahrenheit
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/New_York

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key
CSRF_SECRET=your-csrf-secret-key

# Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-upstash-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Development
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# --- AI Chatbot / Ask AI ---
# Select a provider: openai | anthropic
AI_PROVIDER=
# Direct provider keys (match AI_PROVIDER)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# Optional: Vercel AI Gateway for non-Vercel deployments
AI_GATEWAY_API_KEY=
# Optional: if you configure your own gateway endpoint
# AI_GATEWAY_API_URL=
